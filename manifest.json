{
  "manifest_version": 3,
  "name": "Perplexity Search",
  "version": "1.0",
  "description": "Adds a context menu item to search selected text on Perplexity AI.",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}